<h1>Sign up for our site!</h1>

<%= form_for @user do |f| %>
	Name <%= f.text_field :name, placeholder: "create your user name" %><br />
	Email <%= f.text_field :email, placeholder: "enter your email address" %><br />

	<%= f.password_field :password, placeholder: "create a password" %><br />
	<%= f.password_field :password_confirmation, placeholder: "re-enter a password" %>

	<%= f.submit "Create your Account", class: "btn btn-success" %>

<% end %>

<%= link_to "Back to the List!", users_path %>



